<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to Jason's Camp</h1>
        <p>View our hand-pickd campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular Campgrounds!</h3>
        </div>
    </div>
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground) {%>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <div style="height: 100px; overflow: hidden;">
                        <img class="card-img-top" src="<%= campground.image %>">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            </div>
        <% })%>
    </div>
</div>


<%- include("partials/footer") %>
